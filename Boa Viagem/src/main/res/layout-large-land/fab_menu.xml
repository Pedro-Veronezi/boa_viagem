<com.getbase.floatingactionbutton.FloatingActionsMenu
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    android:id="@+id/fab"
    android:layout_width="@dimen/fab_size"
    android:layout_height="@dimen/fab_size"
    android:layout_margin="@dimen/fab_margin"
    android:layout_gravity="bottom|end"
    fab:fab_addButtonColorNormal="@color/accent"
    fab:fab_addButtonColorPressed="@color/accent_light"
    fab:fab_addButtonPlusIconColor="@android:color/white"
    fab:fab_labelsPosition="left">

    <com.getbase.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_novo_gasto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        fab:fab_colorNormal="@android:color/white"
        fab:fab_title="Despesa"
        fab:fab_size="mini"
        fab:fab_icon="@drawable/ic_currency_usd_grey600_24dp"
        fab:fab_colorPressed="@color/primary_light"/>

    <com.getbase.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_nova_viagem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        fab:fab_title="Viagem"
        fab:fab_size="mini"
        fab:fab_icon="@drawable/ic_airplane_grey600_24dp"
        fab:fab_colorNormal="@android:color/white"
        fab:fab_colorPressed="@color/primary_light"/>


</com.getbase.floatingactionbutton.FloatingActionsMenu>