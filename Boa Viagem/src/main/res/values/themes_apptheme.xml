<resources>

    <style name="AppTheme.Base" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Main theme colors -->
        <!--   your app branding color for the app bar -->
        <item name="colorPrimary">@color/primary</item>
        <!--   darker variant for the status bar and contextual app bars -->
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <!--   theme UI controls like checkboxes and text fields -->
        <item name="colorAccent">@color/accent</item>
    </style>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="AppTheme.Base">
        <!-- Customize your theme here. -->



    </style>

    <style name="BaseText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">4dp</item>

    </style>

    <style name="SubTitleText" parent="BaseText">
        <item name="android:layout_marginBottom">4dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/body_text_1</item>
        <item name="android:background">@drawable/detail_separator</item>
    </style>

    <style name="DescriptionText" parent="BaseText">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/body_text_2</item>
        <item name="android:lineSpacingMultiplier">1.1</item>
    </style>

    <style name="TextAppearance.pveronezi.FloatLabel" parent="android:TextAppearance.Small">
        <item name="android:textColor">@drawable/colors_float_label</item>
        <item name="android:textSize">12sp</item>
    </style>


</resources>
